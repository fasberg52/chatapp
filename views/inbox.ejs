                            <span class="input-group-text">
                              <i class="fa fa-search"></i>
                            </span>
                          </div>
                        </div>
                      </form>

                      <div class="card-body p-2" id="conversation-list">
                        <% data.forEach((conversation)=> { %> <% if(conversation.creator.id+""==userid+"") { %>
