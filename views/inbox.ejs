                              onclick="getMessages('<%= conversation._id %>', '<%= conversation.participant.name %>')">
                              <div class="d-flex p-2">
                                <img alt="Image" src="/assets/image/images.png" class="avatar shadow" />
                                <div class="ml-2">
                                  <div class="justify-content-between align-items-center">
                                    <div class="text-right mb-0 mt-1 mr-1">
                                      <h4 class="text-white mr-2">
                                        <%= conversation.participant.name %>
                                      </h4>

                                      <div class="conversation-date text-white mr-2 h6">
                                        <%= moment(conversation.last_updated).locale('fa').fromNow('YYYY/M/D'); %>
                                      </div>

                                      <span class="badge badge-success"></span>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>

                            <% } else { %>

                              <div class="d-block p-2 rounded-lg bg-gradient-primary mb-2"
                                onclick="getMessages('<%= conversation._id %>', '<%= conversation.creator.name %>')">
                                <div class="d-flex p-2">
                                  <img alt="Image" src="/assets/image/images.png" class="avatar shadow" />
                                  <div class="ml-2">
                                    <div class="justify-content-between align-items-center">
                                      <div class="text-right mb-0 mt-1 mr-1">
                                        <h4 class="text-white mr-2">
                                          <%= conversation.creator.name %>
                                        </h4>

                                        <div class="conversation-date text-white mr-2 h6">
                                          <%= moment(conversation.last_updated).locale('fa').fromNow('YYYY/M/D'); %>
                                        </div>

                                        <span class="badge badge-success"></span>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>

                              <% } %>
                                <% }); %>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="card max-height-vh-70" style="max-height: 70vh">
                      <div class="card-header shadow-xl">
                        <div class="row">
                          <div class="col-md-8 d-flex justify-content-start">
                            <div class="media align-items-center">
                              <span class="avatar avatar-sm">
                                <img alt="Image placeholder" src="/assets/image/img_avatar.png" />
                              </span>

                              <span>
                                <% if(user) { %>
                                  <p class="mb-0 mr-2">
                                    <%= user.name %>
                                  </p>
                                  <% } %>
                              </span>
                            </div>
                          </div>
                          <div class="col-md-4 d-flex align-items-center justify-content-end">
