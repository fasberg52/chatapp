          <div class="login100-pic js-tilt" data-tilt>
            <img src="/assets/image/img-01.png" alt="IMG" />
          </div>

          <form
            action="/login"
            method="post"
            class="login100-form validate-form"
          >
            

            <span class="login100-form-title"> فرم عضویت </span>
            <% if(errorMessage) {%>
            <div class="alert alert-danger custom-alert text-center">
              <%= errorMessage %>
            </div>
            <% } %> <% if(successMessage[0]){ %>
            <div class="alert alert-success custom-alert text-center">
              <%= successMessage[0] %>
            </div>
            <% } %>

            <div>
              <div class="wrap-input100 validate-input" id="user-email">
                <input
                  class="input100"
                  type="email"
                  name="email"
                  placeholder="ایمیل خود را وارد کنید"
                />
                <span class="focus-input100"></span>
                <span class="symbol-input100">
                  <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
              </div>
              <!-- otp after complated farawin project
            <div
              class="wrap-input100 validate-input"
              data-validate="کد تایید شمااشتباه است"
